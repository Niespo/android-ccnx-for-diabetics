<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="10dp" android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Wyniki pomiarÃ³w glukozy:"
            android:id="@+id/textView" android:textStyle="italic" android:textColor="#ff595959"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/patient_firstname" android:layout_marginRight="10dp" android:textStyle="bold"
                android:textColor="#ff595959"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/patient_surename" android:textStyle="bold" android:textColor="#ff595959"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:padding="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pesel:"
                android:id="@+id/textView2" android:layout_marginRight="10dp" android:textStyle="bold|italic"
                android:textColor="#ff595959"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/patient_pesel" android:textColor="#ff595959"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:padding="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Data urodzenia:"
                android:id="@+id/textView3" android:layout_marginRight="10dp" android:textStyle="bold|italic"
                android:textColor="#ff595959"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/patient_age" android:textColor="#ff595959"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pomiary glukozy"
            android:id="@+id/textView5" android:layout_gravity="center_horizontal" android:textStyle="bold|italic"
            android:textColor="#ff595959"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="207dp"
            android:id="@+id/patient_measurements" android:layout_weight="0.85"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zamknij"
            android:id="@+id/button" android:textColor="#ffffffff" android:layout_gravity="center_horizontal"
            android:onClick="closeMeasurements"/>
</LinearLayout>